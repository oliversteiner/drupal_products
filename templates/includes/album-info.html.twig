{# Product Title & Info #}
{# ==================================  #}

<div class="product-info-container">

  {# category #}
  <div class="product-category">
    <label class="product-label sr-only">Produkt Kategory:</label>
    {{ product.category }}
  </div>

  {# name #}
  <div class="product-name">
    <label class="product-label sr-only">Titel:</label>
    <h2>{{ product.name }} </h2>
  </div>

  {# description #}
  <div class="product-description">
    <label class="product-label sr-only">Beschreibung:</label>
    {{ product.description }}
  </div>

  {# artists #}
  <div class="product-artist">
    <label class="product-label sr-only">Interpret:</label>
    <ul class="product-multiple">
      {% for artist in product.artists %}
        <li>{{ artist }}</li>
      {% endfor %}
    </ul>
  </div>

  {# authors #}
  <div class="product-author">
    <span class="product-label sr-only">Autor:</span>
    <ul class="product-multiple">
      {% for author in product.authors %}
        <li>{{ author }}</li>
      {% endfor %}
    </ul>

  </div>

  {# copyright #}
  <div class="product-copyright">
    <label class="product-label sr-only">Copyright:</label>
    {{ product.copyright }} </div>

  {# producer #}
  <div class="product-producer">
    <label class="product-label sr-only">Produzent:</label>
    {{ product.producer }} </div>


  {# Date of publication	 #}
  <div class="product-date-of-publication">
    <label class="product-label sr-only">Veröffentlicht am	:</label>
    {{ product.date_of_publication|date("F Y") }} </div>

  {# available #}
  {% if not product.available %}
    <div class="product-not-available">Zur Zeit nicht verfügbar.</div>
  {% endif %}
</div>
